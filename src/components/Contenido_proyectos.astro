---
const { proyectos } = Astro.props;

interface Proyectos {
    img: string;
    empresa: string;
    ano: string;
    proyectos: {
        titulo: string;
        descripcion: string;
        tareas: string[];
        tectnologias: string[];
    }[];
}
---

<div class="w-[600px]">
    <!-- Timeline line -->
    <div class="absolute top-[6px] bottom-0 w-0.5 bg-gray-600"></div>

    <!-- Event items -->
    <div class="pl-4">
        <!-- Item 1 -->
        <div class="relative my-10">
            <div
                class="absolute top-[6px] -left-[21px] w-3 h-3 bg-gray-500 border-2 border-gray-500 rounded-full z-10"
            >
            </div>
            <div class="ml-10">
                <p class="mb-10">
                    <span class="font-semibold text-xl text-gray-100"
                        >{proyectos.titulo}
                    </span>
                    <br />
                    <span class="ml-2 text-xs text-gray-400"
                        >{proyectos.ano}</span
                    >
                </p>
                <!-- contenedor -->
                <div
                    class="rounded-lg px-4 py-3 text-sm shadow-[0_0_20px_rgba(0,0,0,0.3)]"
                >
                    <p class="text-texto_simple">{proyectos.descripcion}</p>
                    <br />
                    <p class="mt-2 text-xs text-gray-500">ðŸ“‹ Tareas:</p>

                    <ul class="list-disc list-inside mt-3">
                        {
                            proyectos.tareas.map((tarea: Proyectos) => (
                                <li class="text-xs text-gray-500 list-none ">
                                    {tarea}
                                </li>
                            ))
                        }
                        <p class="mt-2 text-xs text-gray-500">3d ago</p>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
