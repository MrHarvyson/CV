---
import Contenido_proyectos from "./Contenido_proyectos.astro";
const { experiencia } = Astro.props;

interface Proyectos {
  img: string;
  empresa: string;
  ano: string;
  proyectos: {
    titulo: string;
    descripcion: string;
    tareas: string[];
    tectnologias: string[];
  }[];
}
---

<div class="card px-10 md:px-0 flex justify-center items-start w-full gap-20">
  <img
    class="blanco hidden md:block w-[150px] h-[150px]"
    src={experiencia.img}
  />
  <div class="flex flex-col">
    <div class="flex items-baseline pb-4 gap-2">
      <p class="text-azul font-medium text-4xl">
        {experiencia.empresa}
      </p>
      <p class="hidden md:block font-light text-base text-gray-400">
        {experiencia.ano}
      </p>
    </div>

    <p class="text-base text-gray-400">{experiencia.titulo}</p>

    <div>
      <div class="relative">
        {
          experiencia.proyectos.map((proyectos: Proyectos) => {
            return <Contenido_proyectos proyectos={proyectos} />;
          })
        }
      </div>
    </div>
  </div>
</div>
